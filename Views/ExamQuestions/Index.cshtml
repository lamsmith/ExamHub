@model IEnumerable<ExamHub.Entity.ExamQuestion>

@{
    ViewData["Title"] = "Exam Questions";
}

<h2>Exam Questions</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Question</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var examQuestion in Model)
        {
            <tr>
                <td>@examQuestion.Id</td>
                <td>@examQuestion.QuestionText</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@examQuestion.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@examQuestion.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@examQuestion.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Question</a>
