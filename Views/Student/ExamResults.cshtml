@using ExamHub.ViewModel
@model GeneralExamResultViewModel

<div class="container">
    <h2>General Exam Results</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Exam Name</th>
                <th>Date</th>
                <th>Score</th>
                <th>Percentage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model.ExamResults)
            {
                <tr>
                    <td>@result.Subject</td>
                    <td>@result.ExamDate.ToString("yyyy-MM-dd")</td>
                    <td>@result.Score</td>
                    <td>@result.Percentage.ToString("F2")%</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="overall-percentage">
        <h4>Total Percentage: @Model.TotalPercentage.ToString("F2")%</h4>
    </div>
</div>
