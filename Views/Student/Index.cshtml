                }
            </ul>
        </div> 
        <div class="col-md-12">
            <h2>Notifications</h2>
            <ul>
                @foreach (var notification in Model.Notifications)
                {
                    <li>@notification.Message</li>
                }
            </ul>
        </div> *@
        </div>
</div>
