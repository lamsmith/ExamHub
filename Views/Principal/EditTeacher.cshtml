@model ExamHub.ViewModel.EditTeacherViewModel

@{
    ViewData["Title"] = "Edit Teacher";
}

<h2>Edit Teacher</h2>

<form asp-action="EditTeacher" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="classes">Assigned Classes</label>
        <select asp-for="AssignedClassIds" class="form-control" asp-items="@(new MultiSelectList(Model.AllClasses, "Id", "ClassName"))" multiple="multiple"></select>
    </div>

    <div class="form-group">
        <label for="subjects">Assigned Subjects</label>
        <select asp-for="AssignedSubjectIds" class="form-control" asp-items="@(new MultiSelectList(Model.AllSubjects, "Id", "SubjectName"))" multiple="multiple"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="ViewTeachers" class="btn btn-secondary">Cancel</a>
</form>
