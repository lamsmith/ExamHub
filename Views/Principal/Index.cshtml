@model ExamHub.ViewModel.PrincipalDashboardViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Principal Dashboard</title>
    <link rel="stylesheet" href="~/css/PrincipalDashBoard.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="sidebar">
            <h2>Dashboard</h2>
            <ul>
                <li><a asp-action="Index" asp-controller="Principal">Home</a></li>
                <li><a asp-action="ViewTeachers" asp-controller="Principal">Teachers</a></li>
                <li><a asp-action="ViewStudents" asp-controller="Principal">Students</a></li>
                <li><a asp-action="ManageClasses" asp-controller="Principal">Classes</a></li>
                <li><a asp-action="ManageSubjects" asp-controller="Principal">Subjects</a></li>
                <li><a asp-action="Settings" asp-controller="Principal">Settings</a></li>
                <li><a asp-action="Logout" asp-controller="Account">Logout</a></li>
            </ul>
        </div>
        <div class="main-content">
            <header>
                <h1>Welcome, @Model.PrincipalName</h1>
                <p>Your dashboard overview</p>
            </header>
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="icon text-warning">
                                &#128179; <!-- Replace with appropriate icon -->
                            </div>
                            <div class="card-title">@Model.TotalTeachers</div>
                            <div class="small-text text-warning">Total Teachers</div>
                            <div class="trend text-danger">Total numbers of registered teachers</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="icon text-danger">
                                &#128214; <!-- Replace with appropriate icon -->
                            </div>
                            <div class="card-title">@Model.TotalStudents</div>
                            <div class="small-text text-warning">Total Students</div>
                            <div class="trend text-danger">Total numbers of registered students</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="icon text-info">
                                &#128142; <!-- Replace with appropriate icon -->
                            </div>
                            <div class="card-title">29</div>
                            <div class="small-text text-info">Classes</div>
                            <div class="trend text-success">Number of classes</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
