@model IEnumerable<ExamHub.DTO.ClassResponseModel>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Classes</title>
    <link rel="stylesheet" href="~/css/PrincipalDashBoard.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="sidebar">
            <h2>Dashboard</h2>
            <ul>
                <li><a asp-action="Index" asp-controller="Principal">Home</a></li>
                <li><a asp-action="ViewTeachers" asp-controller="Principal">Teachers</a></li>
                <li><a asp-action="ViewStudents" asp-controller="Principal">Students</a></li>
                <li><a asp-action="ManageClasses" asp-controller="Principal">Classes</a></li>
                <li><a asp-action="ManageSubjects" asp-controller="Principal">Subjects</a></li>
                <li><a asp-action="Settings" asp-controller="Principal">Settings</a></li>
                <li><a asp-action="Logout" asp-controller="Account">Logout</a></li>
            </ul>
        </div>
        <div class="main-content">
            <header>
                <h1>Manage Classes</h1>
            </header>
            <section class="content">
                <a href="@Url.Action("CreateClass", "Principal")" class="btn btn-primary">Create New Class</a>
                <table>
                    <thead>
                        <tr>
                            <th>Class ID</th>
                            <th>Class Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var classModel in Model)
                        {
                            <tr>
                                <td>@classModel.Id</td>
                                <td>@classModel.ClassName</td>
                                <td>
                                    <a href="@Url.Action("EditClass", "Principal", new { id = classModel.Id })" class="btn btn-warning">Edit</a>
                                    <form action="@Url.Action("DeleteClass", "Principal", new { id = classModel.Id })" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </div>
    </div>
</body>
</html>
