@model ExamHub.ViewModel.ClassStudentsViewModel

@{
    ViewData["Title"] = "View Students";
    Layout = null;
}

<h2>View Students</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Class</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.ClassName</td>
            </tr>
        }
    </tbody>
</table>
